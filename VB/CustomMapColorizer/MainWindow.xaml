<Window x:Class="CustomMapColorizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxm="http://schemas.devexpress.com/winfx/2008/xaml/map"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <dxm:MapControl Name="mapControl1">
            <dxm:VectorLayer>
                <dxm:VectorLayer.ShapeLoader>
                    <dxm:ShapefileLoader   
                         FileUri="/CustomMapColorizer;component/Data/ShapeFiles/Countries.shp" ShapesLoaded="ShapefileLoader_ShapesLoaded" />
                </dxm:VectorLayer.ShapeLoader>
            </dxm:VectorLayer>        
        </dxm:MapControl>
    </Grid>
</Window>
